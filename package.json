{
    "name": "bitecache",
    "version": "1.3.1",
    "description": "Bitecache",
    "keywords": [
        "cache",
        "nanocache",
        "smallcache",
        "tinycache",
        "memcache",
        "database"
    ],
    "author": "Igor Ramadas <igor@devv.com>",
    "homepage": "https://bitecache.devv.com",
    "subdomain": "bitecache",
    "license": "MIT",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "repository": {
        "type": "git",
        "url": "https://github.com/igoramadas/bitecache.git"
    },
    "engines": {
        "node": ">= 12.0"
    },
    "scripts": {
        "build": "tsc -p tsconfig-build.json",
        "build-test": "tsc -p tsconfig-test.json",
        "clean": "rm -rf ./lib && rm -rf ./lib-test && rm -rf ./coverage && rm -rf ./docs",
        "prebuild": "npm run clean",
        "docs": "rm -rf ./docs && typedoc && cp CNAME docs/ && cp .nojekyll docs/",
        "test": "npm run build-test && mocha ./test/*.ts",
        "test-coverage": "nyc --reporter=lcov npm test"
    },
    "dependencies": {
        "anyhow": "^3.3.0"
    },
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "^1.0.2",
        "@types/mocha": "^10.0.1",
        "@types/node": "^20.1.0",
        "chai": "^4.3.7",
        "coveralls": "^3.1.1",
        "mocha": "^10.2.0",
        "mocha-lcov-reporter": "^1.3.0",
        "nyc": "^15.1.0",
        "source-map-support": "^0.5.21",
        "ts-node": "^10.9.1",
        "typedoc": "^0.24.6",
        "typescript": "^5.0.4"
    },
    "prettier": {
        "trailingComma": "none",
        "tabWidth": 4,
        "semi": false,
        "singleQuote": false,
        "arrowParens": "always",
        "bracketSpacing": false,
        "printWidth": 250
    },
    "mocha": {
        "exit": true,
        "recursive": true,
        "require": [
            "test/mocha.env",
            "ts-node/register",
            "source-map-support/register"
        ]
    },
    "nyc": {
        "extends": "@istanbuljs/nyc-config-typescript",
        "temp-dir": "./coverage",
        "reporter": [
            "lcov",
            "text"
        ]
    }
}
